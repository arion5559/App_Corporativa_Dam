<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dark_souls_background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/character_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/default_character"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del personaje"
        android:textColor="colorWhite"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/character_image"
        app:layout_constraintTop_toTopOf="@id/character_image"
        app:layout_constraintBottom_toTopOf="@id/level_text" />

    <TextView
        android:id="@+id/level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel"
        android:textColor="colorWhite"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/character_image"
        app:layout_constraintTop_toBottomOf="@id/character_name" />

    <TextView
        android:id="@+id/level_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="colorYellow"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/level_text"
        app:layout_constraintTop_toBottomOf="@id/character_name" />

    <TextView
        android:id="@+id/vitality_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vitalidad"
        android:textColor="colorWhite"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/character_image"
        app:layout_constraintTop_toBottomOf="@id/level_text" />

    <TextView
        android:id="@+id/vitality_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="colorYellow"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/vitality_text"
        app:layout_constraintTop_toBottomOf="@id/level_value" />

    <TextView
        android:id="@+id/attunement_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aprendizaje"
        android:textColor="colorWhite"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/character_image"
        app:layout_constraintTop_toBottomOf="@id/vitality_text" />

    <TextView
        android:id="@+id/attunment_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="colorYellow"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/attunement_text"
        app:layout_constraintTop_toBottomOf="@id/vitality_value" />

    <TextView
        android:id="@+id/endurance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resistencia"
        android:textColor="colorWhite"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/character_image"
        app:layout_constraintTop_toBottomOf="@id/attunement_text" />

    <TextView
        android:id="@+id/endurance_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="colorYellow"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/endurance_text"
        app:layout_constraintTop_toBottomOf="@id/attunment_value" />

    <TextView
        android:id="@+id/vigor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vigor"
        android:textColor="colorWhite"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/character_image"
        app:layout_constraintTop_toBottomOf="@id/endurance_text" />

    <TextView
        android:id="@+id/vigor_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="colorYellow"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/vigor_text"
        app:layout_constraintTop_toBottomOf="@id/endurance_value" />

    <TextView
        android:id="@+id/strength_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuerza"
        android:textColor="colorWhite"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/character_image"
        app:layout_constraintTop_toBottomOf="@id/vigor_text" />

    <TextView
        android:id="@+id/strength_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="colorYellow"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/strength_text"
        app:layout_constraintTop_toBottomOf="@id/vigor_value" />

    <TextView
        android:id="@+id/dexterity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destreza"
        android:textColor="colorWhite"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/character_image"
        app:layout_constraintTop_toBottomOf="@id/strength_text" />

    <TextView
        android:id="@+id/dexterity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="colorYellow"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/dexterity_text"
        app:layout_constraintTop_toBottomOf="@id/strength_value" />

    <TextView
        android:id="@+id/intelligence_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inteligencia"
        android:textColor="colorWhite"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/character_image"
        app:layout_constraintTop_toBottomOf="@id/dexterity_text" />

    <TextView
        android:id="@+id/intelligence_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="colorYellow"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/intelligence_text"
        app:layout_constraintTop_toBottomOf="@id/dexterity_value" />

    <TextView
        android:id="@+id/faith_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fe"
        android:textColor="colorWhite"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/character_image"
        app:layout_constraintTop_toBottomOf="@id/intelligence_text" />

    <TextView
        android:id="@+id/faith_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="colorYellow"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/faith_text"
        app:layout_constraintTop_toBottomOf="@id/intelligence_value" />

    <TextView
        android:id="@+id/luck_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suerte"
        android:textColor="colorWhite"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/character_image"
        app:layout_constraintTop_toBottomOf="@id/faith_text" />

    <TextView
        android:id="@+id/luck_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="colorYellow"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/luck_text"
        app:layout_constraintTop_toBottomOf="@id/faith_value" />

</androidx.constraintlayout.widget.ConstraintLayout>
